{
  "name": "@dnext/root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "turbo start",
    "build": "turbo build",
    "build:core": "turbo run build --filter=dnext",
    "build:plugins": "turbo run build --filter='dnext-plugin-*'",
    "dev": "turbo dev",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.2",
    "@manypkg/cli": "^0.19.2",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "tsup": "^6.7.0",
    "turbo": "^1.8.3"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "packageManager": "pnpm@8.1.0"
}
